<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_ingredient_stocktake_form" model="ir.ui.view">
        <field name="name">ingredient.stocktake.form</field>
        <field name="model">ingredient.stocktake</field>
        <field name="arch" type="xml">
            <form string="Ingredient Stocktake">
                <header>
                    <button name="action_load_all_ingredients" type="object"
                            string="Load All Ingredients / تحميل جميع المكونات"
                            class="btn-secondary" invisible="state != 'draft'"/>
                    <button name="action_start" type="object"
                            string="Start Counting / بدء الجرد"
                            class="btn-primary" invisible="state != 'draft'"/>
                    <button name="action_validate" type="object"
                            string="Validate / تأكيد"
                            class="btn-success" invisible="state != 'in_progress'"/>
                    <button name="action_cancel" type="object"
                            string="Cancel / إلغاء"
                            invisible="state in ('done', 'cancelled')"/>
                    <button name="action_reset_to_draft" type="object"
                            string="Reset to Draft / إعادة للمسودة"
                            invisible="state != 'cancelled'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="%(account.action_move_journal_line)d" type="action"
                                class="oe_stat_button" icon="fa-book"
                                invisible="not account_move_id"
                                context="{'search_default_id': account_move_id}">
                            <field name="account_move_id" widget="statinfo" string="Journal Entry"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="date" readonly="state != 'draft'"/>
                            <field name="user_id" readonly="state != 'draft'"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                        <group>
                            <field name="gain_account_id"
                                   readonly="state == 'done'"
                                   options="{'no_create': True}"
                                   string="Gain Account / حساب الأرباح"/>
                            <field name="loss_account_id"
                                   readonly="state == 'done'"
                                   options="{'no_create': True}"
                                   string="Loss Account / حساب الخسائر"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>

                    <div class="row mb-3" invisible="state == 'draft'">
                        <div class="col-md-2">
                            <div class="text-center p-3" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 10px;">
                                <h3 class="text-white mb-0"><field name="line_count" readonly="1"/></h3>
                                <small class="text-white">Items / عناصر</small>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="text-center p-3" style="background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%); border-radius: 10px;">
                                <h3 class="text-white mb-0"><field name="total_system_value" readonly="1" widget="monetary"/></h3>
                                <small class="text-white">System / النظام</small>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="text-center p-3" style="background: linear-gradient(135deg, #00c6ff 0%, #0072ff 100%); border-radius: 10px;">
                                <h3 class="text-white mb-0"><field name="total_counted_value" readonly="1" widget="monetary"/></h3>
                                <small class="text-white">Counted / الفعلي</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center p-3" style="background: linear-gradient(135deg, #ff416c 0%, #ff4b2b 100%); border-radius: 10px;">
                                <h3 class="text-white mb-0"><field name="total_variance_value" readonly="1" widget="monetary"/></h3>
                                <small class="text-white">Variance / الفرق</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="text-center p-3" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); border-radius: 10px;">
                                <h3 class="text-white mb-0"><field name="variance_count" readonly="1"/></h3>
                                <small class="text-white">Variances / فروقات</small>
                            </div>
                        </div>
                    </div>

                    <notebook>
                        <page string="Count Lines / سطور الجرد" name="lines">
                            <field name="line_ids" readonly="state == 'done'">
                                <list editable="bottom" decoration-danger="variance_qty &lt; 0" decoration-success="variance_qty &gt; 0">
                                    <field name="product_id" readonly="parent.state != 'draft'"/>
                                    <field name="uom_id" readonly="1"/>
                                    <field name="system_qty" readonly="1" sum="Total System"/>
                                    <field name="counted_qty" sum="Total Counted"/>
                                    <field name="variance_qty" readonly="1" sum="Total Variance"
                                           decoration-danger="variance_qty &lt; 0"
                                           decoration-success="variance_qty &gt; 0"/>
                                    <field name="unit_cost" readonly="1"/>
                                    <field name="system_value" readonly="1" sum="System Value"/>
                                    <field name="counted_value" readonly="1" sum="Counted Value"/>
                                    <field name="variance_value" readonly="1" sum="Variance Value"
                                           decoration-danger="variance_value &lt; 0"
                                           decoration-success="variance_value &gt; 0"/>
                                    <field name="notes"/>
                                    <field name="currency_id" column_invisible="1"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes / ملاحظات" name="notes">
                            <field name="notes" placeholder="Add notes about this stocktake..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <record id="view_ingredient_stocktake_list" model="ir.ui.view">
        <field name="name">ingredient.stocktake.list</field>
        <field name="model">ingredient.stocktake</field>
        <field name="arch" type="xml">
            <list string="Stocktakes" decoration-info="state == 'draft'" decoration-warning="state == 'in_progress'" decoration-success="state == 'done'" decoration-muted="state == 'cancelled'">
                <field name="name"/>
                <field name="date"/>
                <field name="user_id"/>
                <field name="line_count" string="Items"/>
                <field name="total_system_value" sum="System Total"/>
                <field name="total_counted_value" sum="Counted Total"/>
                <field name="total_variance_value" sum="Variance Total"
                       decoration-danger="total_variance_value &lt; 0"
                       decoration-success="total_variance_value &gt; 0"/>
                <field name="variance_count" string="Variances"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-warning="state == 'in_progress'"
                       decoration-success="state == 'done'"
                       decoration-danger="state == 'cancelled'"/>
                <field name="currency_id" column_invisible="1"/>
            </list>
        </field>
    </record>

    <record id="view_ingredient_stocktake_search" model="ir.ui.view">
        <field name="name">ingredient.stocktake.search</field>
        <field name="model">ingredient.stocktake</field>
        <field name="arch" type="xml">
            <search string="Stocktakes">
                <field name="name"/>
                <field name="user_id"/>
                <filter name="filter_draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                <filter name="filter_in_progress" string="In Progress" domain="[('state', '=', 'in_progress')]"/>
                <filter name="filter_done" string="Validated" domain="[('state', '=', 'done')]"/>
                <separator/>
                <filter name="filter_today" string="Today" domain="[('date', '=', context_today().strftime('%Y-%m-%d'))]"/>
                <filter name="filter_this_month" string="This Month" domain="[('date', '&gt;=', context_today().strftime('%Y-%m-01'))]"/>
                <group expand="0" string="Group By">
                    <filter name="group_state" string="Status" context="{'group_by': 'state'}"/>
                    <filter name="group_user" string="Responsible" context="{'group_by': 'user_id'}"/>
                    <filter name="group_date" string="Date" context="{'group_by': 'date'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_ingredient_stocktake" model="ir.actions.act_window">
        <field name="name">Ingredient Stocktake / جرد المكونات</field>
        <field name="res_model">ingredient.stocktake</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_ingredient_stocktake_search"/>
        <field name="context">{'search_default_filter_draft': 1, 'search_default_filter_in_progress': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first ingredient stocktake
            </p>
            <p>
                Count your ingredient inventory and automatically post adjustments to accounting.
            </p>
        </field>
    </record>

    <record id="ir_sequence_ingredient_stocktake" model="ir.sequence">
        <field name="name">Ingredient Stocktake</field>
        <field name="code">ingredient.stocktake</field>
        <field name="prefix">STK/%(year)s/</field>
        <field name="padding">4</field>
        <field name="company_id" eval="False"/>
    </record>

</odoo>
